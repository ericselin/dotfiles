# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 5
  color_good = "#50FA7B"
  color_bad = "#FF5555"
}

order += "read_file pomodoro"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
#order += "disk /"
#order += "load"
#order += "memory"
order += "tztime local"

wireless _first_ {
  format_up = "W: %quality at %essid"
  format_down = "W: down"
  format_quality = "%d%s"
}

ethernet _first_ {
  format_up = "E: %speed"
  format_down = "E: down"
  color_bad = "F8F8F2"
}

battery all {
  format = "%status %percentage %remaining"
# emojis don't work well (falls back to bad default)
# status_chr = "âš¡"
# status_bat = "ðŸ”‹"
}

disk "/" {
  format = "%avail"
}

load {
  format = "%1min"
}

memory {
 format = "%used/%available"
 threshold_degraded = "1G"
 format_degraded = "MEMORY < %available"
}

tztime local {
	format = "%time"
  format_time = "%d.%m %H:%M"
}

read_file pomodoro {
	path = "/home/eric/pomodoro"
	format = "Pomo: %content"
	format_bad = "No pomodoro running - you must be on a break!"
  color_bad = "F8F8F2"
}
